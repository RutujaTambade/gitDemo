package Abc;

public class Starpattern1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
            
		  for( int m=1; m<=4; m++)
           {
        	   for(int j=1; j<=m;j++)
        	   {
        		   System.out.println(" ");
        	   }
        	   for (int k=1;k>=m; k--)
        	   {
        		   System.out.println("*");
        		   
        	   }
        	   for(int i=3;i>=i;i--)
        	   {
        		   System.out.println("*");
        		   
        	   }
                   System.out.println();
           }
         
           
	}

}
